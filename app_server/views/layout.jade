doctype html
html
  head
    meta(charset='utf-8' name='viewport' content='width=device-width, initial-scale=1')
    title= title
    //link(rel='stylesheet', href='/stylesheets/style.css')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet")
  body
    header
      nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
        div.container-fluid
          a.navbar-brand(href='/') logo
          button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#collapsibleNavbar')
            span.navbar-toggler-icon
          div.collapse.navbar-collapse(id='collapsibleNavbar')
            ul.navbar-nav
              li.nav-item
                a.nav-link(href='/#') Home
              li.nav-item
                a.nav-link(href='/users') Students
              li.nav-item
                a.nav-link(href='/faculty') Faculty
              li.nav-item
                a.nav-link(href='/staff') staff
    div.container-fluid.p-5.bg-primary.text-white.text-center
      h1 Welcome to #{title} Bootstrap Page 
      p resize the browser window to see the effect
    block content 
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css')

    footer
    div.container-fluid.p-5.bg-primary.text-white.text-center
      div.row
        div.col-sm-12
          p Express Footer Page
